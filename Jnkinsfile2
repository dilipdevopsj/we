pipeline {
    agent any 

    tools {
        maven 'njob'
    }

    stages {
        stage('Build Info') {
            steps {
                echo "Build started: Job ${env.JOB_NAME} #${env.BUILD_NUMBER}"
                notifyBuild('STARTED')   // <-- send STARTED notification here
            }
        }

        stage('Checkout') { 
            steps {
                git branch: 'dev', 
                    credentialsId: '047e0051-21a4-419a-8217-f8c646580ad9',
                    url: 'https://github.com/dilipdevopsj/we.git'
            }
        }

        stage('Build') { 
            steps {
                sh "mvn clean package"
            }
        }

        /* stage('SonarQube') {
            steps {
                sh "mvn sonar:sonar"
            }
        } */

        stage('Nexus Deploy') {
            steps {
                sh "mvn deploy"
            }
        }

        stage('Deploy To Tomcat') {
            steps {
                echo "Deploying WAR file using curl..."
                sh """
                    set -e
                    WAR_FILE=/var/lib/jenkins/workspace/WQ/target/maven-web-application.war
                    if [ ! -f \$WAR_FILE ]; then
                        echo "WAR file not found!"
                        exit 1
                    fi
                    curl -v -u sai:dd \
                        --upload-file \$WAR_FILE \
                        "http://13.233.164.34:8080/manager/text/deploy?path=/maven-web-application&update=true"
                """
            }
        }
    }

    post {
        always {
            notifyBuild(currentBuild.result)  // SUCCESS or FAILURE after pipeline ends
        }
    }
}

def notifyBuild(String buildStatus = 'STARTED') {

    buildStatus = buildStatus ?: 'SUCCESS'

    def colorCode = '#FF0000'
    if (buildStatus == 'STARTED')   colorCode = '#FFFF00'
    if (buildStatus == 'SUCCESS')   colorCode = '#00FF00'

    def summary = "${buildStatus}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]' (${env.BUILD_URL})"

    slackSend(color: colorCode, message: summary, channel: '#jo')
}
